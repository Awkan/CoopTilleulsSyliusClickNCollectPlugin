{% import "@SyliusUi/Macro/flags.html.twig" as flags %}

<address>
    <strong>{{ shipment.collectionTime|date }}</strong><br>
    {% if shipment.pin is not empty %}
        {{ 'coop_tilleuls_click_n_collect.ui.pin'|trans  }} {{ shipment.pin }}<br>
    {% endif %}
    <strong>{{ shipment.location.name }}</strong><br>
    {% if shipment.location.street is not empty %}
        {{ shipment.location.street }}<br>
    {% endif %}
    {% if shipment.location.postcode is not empty %}
        {{ shipment.location.postcode }}
    {% endif %}
    {% if shipment.location.city is not empty %}
        {{ shipment.location.city }}
    {% endif %}<br>
    {% if shipment.location.provinceName is not empty %}
        {{ shipment.location.provinceCode }} {{ shipment.location.provinceName }}<br>
    {% endif %}
    {% if shipment.location.countryCode is not empty %}
        {{ flags.fromCountryCode(shipment.location.countryCode) }}
        {{ shipment.location.countryCode|sylius_country_name|upper }}
    {% endif %}
</address>
