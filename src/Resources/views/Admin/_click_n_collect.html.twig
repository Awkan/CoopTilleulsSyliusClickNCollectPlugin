{% for shipment in order.shipments %}
    {% if shipment.isClickNCollect() %}
        <h4 class="ui attached styled header{% if loop.first %} top{% endif %}">
            {{ 'coop_tilleuls_click_n_collect.ui.collect_details'|trans }}
        </h4>
        <div class="ui attached segment">
            {% include '@CoopTilleulsSyliusClickNCollectPlugin/Shop/order_collect.html.twig' with {'shipment': shipment} %}
        </div>
    {% endif %}
{% endfor %}
<div class="ui attached segment" id="edit-addresses">
    <a href="{{ path('coop_tilleuls_sylius_click_n_collect_admin_edit_collection', {'orderId': order.id}) }}" class="ui icon labeled tiny fluid button">
        <i class="pencil icon"></i> {{ 'coop_tilleuls_click_n_collect.ui.change_collection_time'|trans }}
    </a>
</div>
